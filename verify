#!/bin/bash

set -xe

# vanilla
./compare-scenario

# Fascist network
./compare-scenario --fascist-firewall

# Flaky
./compare-scenario --flaky-network

# Evil
./compare-scenario --evil-filtering

# Sniper
./compare-scenario --sniper-network

# switch between networks
./compare-scenario --switching-network

# slow recovery
./compare-scenario --slow-recovery

# network down
./compare-scenario --network-down --total-duration 1

# traveling network
--travelling-network -T 1

